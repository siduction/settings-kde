[Appearance]
ColorScheme=Siduction
Font=Monospace,9,-1,5,50,0,0,0,0,0

[General]
Environment=TERM=xterm-256color
Icon=utilities-terminal
LocalTabTitleFormat=%d : %n
Name=Shell
Parent=FALLBACK/
