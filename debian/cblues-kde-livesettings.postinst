#!/bin/sh
# postinst script for #PACKAGE#

set -e

case "$1" in
    configure)
    ## sddm.conf ##
    rm -f /etc/sddm.conf
    ## sddm.conf.d ##
    cp -af /usr/share/cblues-kde-settings/etc/sddm.conf.d /etc   
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
